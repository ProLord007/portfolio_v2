{
    'env': {
        'browser': true,
        'es6': true,
        'jquery': true,
    },
    'extends': 'eslint:recommended',
    'parserOptions': {
        'sourceType': 'module'
    },
    'rules': {
        'indent': ['error', 4],
        'linebreak-style': [ 'error', 'unix' ],
        'quotes': [ 'error', 'single', { 'avoidEscape': true }],
        'semi': [ 'error', 'always' ],
        'no-console': ['error', {
            'allow': ['warn', 'error', 'log']
        }],
        'spaced-comment': ['error', 'always', {
            'line': {
                'markers': ['/'],
                'exceptions': ['-', '+']
            },
            'block': {
                'markers': ['!'],
                'exceptions': ['*'],
                'balanced': true
            }
        }]
    },
    'globals': {
        'require': false,
        'Modernizr': false,
        'global': false,
    }
}
